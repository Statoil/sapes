{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "studyName": {
      "type": "string",
      "maxLength": 80,
      "metadata": {
        "description": "Specify study name, use alphanumeric value only."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "North Europe",
      "metadata": {
        "description": "Azure region for saving RG metadata info + all resources."
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat('sndbox', uniquestring(resourceGroup().id))]",
    "storageAccountType": "Standard_LRS",
    "serviceEndpointName": "[concat('study-',parameters('studyName'), '-service-endpoint')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-07-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "comments": "Storage account for a study",
      "tags": {
        "studyName": "[parameters('studyName')]"
      },
      "kind": "StorageV2",
      "sku": {
        "name": "[variables('storageAccountType')]"
      },
      "properties": {
        "encryption": {
          "keySource": "Microsoft.Storage",
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          }
        }
      }
    },
    {
      "name": "[variables('serviceEndpointName')]",
      "type": "Microsoft.Network/serviceEndpointPolicies",
      "apiVersion": "2018-11-01",
      "location": "[parameters('location')]",
      "tags": {
        "studyName": "[parameters('studyName')]"
      },
      "properties": {
        "serviceEndpointPolicyDefinitions": [
          {
            "properties": {
              "description": "Allow Storage Account",
              "service": "Microsoft.Storage",
              "serviceResources": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
              ]
            },
            "name": "Microsoft.Storage"
          }
        ]
      },
      "resources": [],
      "dependsOn": [ "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]" ]
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "serviceEndpointId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/serviceEndpointPolicies', variables('serviceEndpointName'))]"
    }
  }
}
